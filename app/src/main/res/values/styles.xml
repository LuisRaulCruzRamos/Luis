<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TemaEspecial" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#757575</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#FFF</item>
    </style>

    <style name="EstiloPadre">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#0F0</item>
    </style>

    <style name="btnStyle" parent="EstiloPadre">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TercerEstilo" parent="EstiloPadre">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>
